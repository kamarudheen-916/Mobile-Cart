<%-include('../layout/head')-%>
<%-include('../partials/user-header')-%>
<style>
    #recipient-name{
        background: #c9c9c9;
    }
    label{
        color: aliceblue;
    }
    li{
        font-size: large;
    }
</style>
<div class="container-fluid d-flex  justify-content-center align-items-center" style="height: 100vh; width: 100%;  ">
    <div class="row Address w-75" >
            <div class="d-flex flex-column mt-5 ">
                <div>
                    <button type="button" class="btn btn-success " data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@mdo">
                        Add New Address
                    </button>
                </div>
                <div class="d-flex flex-column " >
                    <div class="mt-4 "><h4>Address :</h4></div>
                    <div class="d-flex flex-column  shadow" style="overflow-y: scroll; height: 400px;"  >
                        <%allAddress.forEach((address)=>{%>
                        <ul class="border p-5 ">
                            <li class="mb-3 " >
                                <input type="radio" name=""  id="">
                                <label style="color: black; text-decoration: underline;" for="">Select Address</label> 
                            </li>
                            <li><%=address.HouseName%></li>
                            <li><%=address.city%></li>
                            <li><%=address.state%></li>
                            <li><%=address.mobileNumber%></li>
                            <a  class="btn btn-danger w-25 mt-3" href="/deletAddress/<%=address._id%>">Delete Address</a>

                            <button  href="/editAddress/<%=address._id%>" onclick="EditAddress('<%=address._id%>')" class="btn btn-success " data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@mdo">
                                Edit Address
                            </button>
                        </ul>    
                       
                        <%})%>
                    </div>

                </div>
            </div>
    </div>
</div>


<div class="modal fade " style=" z-index: 9999;"  id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content " style="background-color: rgb(138, 141, 142);" >
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Add New Address</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        
        <form action="/post_userAddress" method="post">
          <div class="mb-3">
            <label for="recipient-name" class="col-form-label">House Name:</label>
            <input type="text" name="HouseName" class="form-control" id="recipient-name">
          </div>
          <div class="mb-3">
            <label for="recipient-name" class="col-form-label">City:</label>
            <input type="text"  name="city" class="form-control" id="recipient-name">
          </div>
          <div class="mb-3">
            <label for="recipient-name" class="col-form-label">Pincode:</label>
            <input type="number"  name="pincode" class="form-control" id="recipient-name">
          </div>
          <div class="mb-3">
            <label for="recipient-name" class="col-form-label">State:</label>
            <input type="text"  name="state" class="form-control" id="recipient-name">
          </div>
          <div class="mb-3">
            <label for="recipient-name" class="col-form-label">mobile Number:</label>
            <input type="number"  name="mobileNumber" class="form-control" id="recipient-name">
          </div>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="submit"  class="btn btn-success">Save Changes</button>
        </form>
      </div>
      <div class="modal-footer">
       
      </div>
    </div>
  </div>
</div>

<%-include('../partials/user-footer')-%>
<%-include('../layout/footer')-%>