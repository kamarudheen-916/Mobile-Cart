const rangeInput = document.getElementById('customRange1');
  const minPriceInput = document.getElementById('minPrice');
  const maxPriceInput = document.getElementById('maxPrice');

  // Add an event listener to the range input
  rangeInput.addEventListener('input', updateLabelValues);

  // Function to update label values based on the range input
  function updateLabelValues() {
    // Get the current value of the range input
    const rangeValue = rangeInput.value;

    // Update the label values
    minPriceInput.value = rangeValue*100;
    maxPriceInput.value = parseInt(rangeValue) + 1000000; // Adjust this based on your price range
    console.log('Min Price:', rangeInput.value);
    console.log('Max Price:', maxPriceInput.value);

    // Update the label text
    document.querySelector('label[for="minPrice"]').textContent = `₹ ${rangeValue*100}`;
    document.querySelector('label[for="maxPrice"]').textContent = `₹ ${parseInt(rangeValue) + 1000000}`;
  }
